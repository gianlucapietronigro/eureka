#######################################################################################################################################################
actuarialtable<-setRefClass('actuarial_table',
fields=list(actb='matrix',name='character',tasso='numeric',lx='vector',val='character'),
methods=list(show=function()
{
cat('Actuarial table -->',name,',',"interest rate:",tasso*100,'%',',','Valutazione:',val,"\n");methods::show(actb)
})
)
