ins.morte<-setRefClass('caso_morte',
fields=list(unico='numeric',periodico='numeric',contract='list',using.actb='actuarial_table'),
methods=list(show=function()
{
cat('unico:');methods::show(unico)
cat('periodico:');methods::show(periodico)
})
)
